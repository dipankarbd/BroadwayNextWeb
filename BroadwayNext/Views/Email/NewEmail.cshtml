@model EmailSender.Controllers.NewEmailModel

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>NewEmail</title>
    <link type="text/css" rel="stylesheet" href="~/Content/css/custom-theme/jquery-ui-1.8.21.custom.css" />
    <link type="text/css" rel="stylesheet" href="~/Content/css/soft_button.css" />
    <link type="text/css" rel="stylesheet" href="~/Content/css/mystyles.css" />
    <link type="text/css" rel="stylesheet" href="~/Content/css/tablestyles.css" />
    <link type="text/css" rel="stylesheet" href="~/Content/css/layout.css" />
    <link type="text/css" rel="stylesheet" href="~/Content/css/buttons.css" />
    <link type="text/css" rel="stylesheet" href="~/Content/css/custom-theme/main.css" />
    <link href="~/Content/wysihtml5/src/bootstrap-wysihtml5.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <style type="text/css">
        .style1 {
            width: 3%;
        }
    </style>
</head>
<body class="body">
    <input type="hidden" id="hdnFrom" value="@Model.From" />
    <input type="hidden" id="hdnTmpDir" value="@Model.TmpDir" />
    <input type="hidden" id="hdnTO" value="@Model.To"/>
    <input type="hidden" id="hdnCC" value="@Model.CC"/>
    <input type="hidden" id="hdnBCC" value="@Model.BCC"/>

    <div id="pagetitle">Vendor  Email</div>
    <div class="eightypercent">
        <div class="emailbuttonswithsubject">
            <div class="btn-group btn-group-vertical">
                <button id="btnTO" class="btn">To:</button>
                <button id="btnCC" class="btn" data-bind="click: loadVendors">Cc:</button>
                <button id="btnBCC" class="btn" data-bind="click: loadVendors">Bcc:</button>
            </div>
        </div>
        <div class="nintysix">
            <input id="to" type="text" class="textbox" data-bind="value:to" />
            <input id="cc" type="text" class="textbox" data-bind="value:cc" />
            <input id="bcc" type="text" class="textbox" data-bind="value:bcc" />
        </div>
    </div>
    <div class="buttonholder">
        <div class="btn-group btn-group-vertical">
            <button class="btn" id="btnSend">Send</button>
            <button class="btn" id="btnCancel">Cancel</button>
        </div>

        <div class="ccsender">
            <input type="checkbox" name="ccsender" id="ccsender" />
            <label>Cc Sender</label>
        </div>
    </div>
    <div class="sixtypercent"></div>
    <div class="buttonholder">
    </div>
    <div class="eightypercent">
        <div class="emailbuttonswithsubject">
            <div class="btn-group btn-group-vertical">
                <button class="btn btn-link">Subject</button>
            </div>
        </div>
        <div class="nintysix">
            <input name="to2" type="text" class="textboxemail" id="subject" size="12" value="@Model.Subject" />
        </div>
    </div>

    <div class="topwrapper"></div>
    <div class="topwrapper">
        <div class="sectionheadings">Attachments</div>
        <label for="attachments"></label>
        <textarea name="attachments" cols="45" rows="2" class="textboxsized">Attachments1,Attachments2,Attachments3,Attachments4
      </textarea>
    </div>
    <div class="btn-toolbar">
        for more complex components. 

        <div class="btn-toolbar">
            <div class="btn-group">
                <div class="btn" id="btnPrintPreview">Print Preview</div>
                <div class="btn btn-info" id="btnAddAttachments">Add Attachments</div>
                <div class="btn btn-danger" id="btnRemoveAttachments">Remove Attachments</div>
            </div>
        </div>

    </div>
    <textarea id="mailbody" class="textboxextralarger" rows="5" cols="45" name="attachments2">Added Signature</textarea>





    <div id="emailLookupModal" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
            <h3 id="myModalLabel">Email Lookup </h3>
        </div>
        <div class="modal-body">
            @Html.Partial("_EmailLookupPartial")
        </div>
        <div class="modal-footer">
            <button class="btn" data-dismiss="modal" aria-hidden="true">Cancel</button>
            <button id="btnAddLookupToMainEmail" class="btn btn-primary">Add</button>
        </div>
    </div>

    <script src="~/Scripts/jquery-1.7.1.js"></script>
    <script src="~/Content/wysihtml5/lib/js/wysihtml5-0.3.0.js"></script>
    <script type="text/javascript" src="~/Scripts/json2.min.js"></script>
    <script type="text/javascript" src="~/Scripts/knockout-2.1.0.debug.js"></script>

    <script type="text/javascript" src="~/Scripts/koExternalTemplateEngine_all.js"></script>
    <script type="text/javascript" src="~/Scripts/amplify.js"></script>
    <script type="text/javascript" src="~/Scripts/knockout.mapping-latest.js"></script>
    <script type="text/javascript" src="~/Scripts/bootstrap.js"></script>
    <script type="text/javascript" src="~/Scripts/ko.editables.js"></script>
    <script type="text/javascript" src="~/Scripts/moment.min.js"></script>
    <script type="text/javascript" src="~/Scripts/knockout.validation.debug.js"></script>
    <script type="text/javascript" src="~/Scripts/jquery.maskedinput-1.3.js"></script>
    <script type="text/javascript" src="~/Scripts/bootstrap.js"></script>
    <script src="~/Scripts/toastr.js"></script>
    <script src="~/Scripts/underscore.min.js"></script>
    <script src="~/Scripts/knockout.asyncCommand.js"></script>
    <script src="~/Scripts/knockout.activity.js"></script>
    <script src="~/Scripts/bootstrap-datepicker.js"></script>
    <script src="~/Content/wysihtml5/src/bootstrap-wysihtml5.js"></script>
    <script type="text/javascript" src="~/Scripts/app/util.js"></script>
    <script type="text/javascript" src="~/Scripts/app/dataService.js"></script>
    <script type="text/javascript" src="~/Scripts/app/binding-handlers.0.1.js"></script>
    <script src="~/Scripts/app/ViewModels/vendorListing-0.9.1.js"></script>
    <script src="~/Scripts/app/email.js"></script>

</body>
</html>
