<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @RenderSection("styles", required: false)
    @Scripts.Render("~/bundles/modernizr")
    <link href="~/Content/css/ribbon.css" rel="stylesheet" />
    <link href="~/Content/input-text-transform.css" rel="stylesheet" />
    <link href="~/Content/validation.css" rel="stylesheet" />
    <script type="text/javascript">
        var siteRoot = "@String.Format("{0}://{1}{2}",Request.Url.Scheme, Request.Url.Authority,Url.Content("~/"))"; 
    </script>
</head>
<body class="body">
    @Html.Partial("_RibbonPartial")

    @RenderBody()

    @Scripts.Render("~/bundles/jquery")
    @RenderSection("scripts", required: false)
    <script src="~/Scripts/ribbon.js"></script>
    <script src="~/JS/masterpage.js"></script>
</body>
</html>
